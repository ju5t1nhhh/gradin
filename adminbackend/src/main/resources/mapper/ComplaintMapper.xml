<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.qd.adminbackend.dao.ComplaintDao">

    <resultMap id="BaseResultMap" type="edu.qd.adminbackend.domain.Complaint">
        <result column="com_user" property="user" />
        <result column="com_post" property="post" />
        <result column="com_cmtid" property="cmtid" />
        <result column="com_msg" property="msg" />
        <result column="com_creatime" property="creatime" />

    </resultMap>

    <insert id="insertOne" parameterType="edu.qd.adminbackend.domain.Complaint">
        INSERT INTO `complaint` VALUES (#{user},#{post},#{cmtid},#{msg},#{creatime})
    </insert>

    <select id="selectByDTO" parameterType="map" resultMap="BaseResultMap">
        SELECT * FROM `complaint`
        <if test="domain != null">
            <trim prefix="WHERE" prefixOverrides="AND">
                <if test="domain.loginId != null and domain.loginId.length() > 0">
                    AND `admin_loginid`=#{domain.loginId}
                </if>
                <if test="domain.role != null and domain.role > 0">
                    AND `admin_role`=#{domain.role}
                </if>
            </trim>
        </if>
        ORDER BY `admin_role`
        <if test="offset != 0 and length != -1">
            LIMIT #{offset},#{length}
        </if>
    </select>

    <select id="getPassword" parameterType="string" resultType="string">
        SELECT `admin_pwd` FROM `admin` WHERE `admin_loginid`=#{loginId}
    </select>

</mapper>